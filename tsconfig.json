{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "esModuleInterop": true,
        "rootDir": "./src",
        "outDir": "./build",
        "allowJs": true,
        "checkJs": true,
        "declaration": true,
        "removeComments": true,
        "newLine": "lf",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "strictFunctionTypes": true,
        "noUnusedLocals": false,
        "noImplicitReturns": false,
        "skipLibCheck": true
    }
}
